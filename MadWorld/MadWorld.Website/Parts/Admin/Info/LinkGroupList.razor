<div class="col-lg">
    <div class="header">
        <h3>Order: @ListColumnOrder (Items: @LinkGroups.Count)</h3><i class="fa-solid fa-circle-plus add-icon" @onclick="() => AddNewLinkGroup(ListColumnOrder)"></i>
    </div>

    <ul class="dropzone @dropClass"
        ondragover="event.preventDefault();"
        ondragstart="event.dataTransfer.setData('', event.target.id);"
        @ondrop="HandleDrop"
        @ondragenter="HandleDragEnter"
        @ondragleave="HandleDragLeave">

        @foreach (var linkGroup in LinkGroups)
        {
            <LinkGroupItem LinkGroup="linkGroup" OnLastRowTouchedChanged="LastRowChanged" />
        }

        <LinkGroupEmpty OnLastRowTouchedChanged="LastRowChanged" />
    </ul>
</div>
