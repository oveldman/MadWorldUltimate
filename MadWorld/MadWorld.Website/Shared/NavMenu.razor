@using MadWorld.Shared.Enums;

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">
            <img id="nav-logo" src="images/icons/RieMasudaIconSmall.png" alt="www.Mad-World.nl"/> 
            MadWorld
        </a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <i class="fa-solid fa-house"></i> Home
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="CurriculumVitae">
                <i class="fa-solid fa-circle-user"></i> Curriculum Vitae
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="Story">
                <i class="fa-solid fa-book"></i> Story
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" @onclick="ToggleToolsMenu">
                <i class="fa-solid fa-calculator"></i> Tools <i class="tool-space fa-solid fa-angle-@ToolMenuArrow"></i>
            </NavLink>
        </div>
        @if (!collapseToolMenu)
        {
            <div class="nav-item nav-item-submenu px-3">
                <NavLink class="nav-link" href="/Tools/GuidGenerator">
                    <i class="fa-solid fa-wrench"></i> Guid Generator
                </NavLink>
            </div>
            <div class="nav-item nav-item-submenu px-3">
                <NavLink class="nav-link" href="/Tools/HtmlValidator">
                    <i class="fa-solid fa-wrench"></i> HTML Validator
                </NavLink>
            </div>
            <div class="nav-item nav-item-submenu px-3">
                <NavLink class="nav-link" href="/Tools/JsonValidator">
                    <i class="fa-solid fa-wrench"></i> Json Validator
                </NavLink>
            </div>
            <div class="nav-item nav-item-submenu px-3">
                <NavLink class="nav-link" href="/Tools/XmlValidator">
                    <i class="fa-solid fa-wrench"></i> XML Validator
                </NavLink>
            </div>
        }
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="DnD">
                <i class="fa-brands fa-d-and-d"></i> DnD
            </NavLink>
        </div>
        <AuthorizeView Roles="@nameof(RoleTypes.Administrator)">
            <div class="nav-item px-3">
                <NavLink class="nav-link" @onclick="ToggleAdminMenu">
                    <i class="fa-solid fa-lock"></i> Admin <i class="tool-space fa-solid fa-angle-@AdminMenuArrow"></i>
                </NavLink>
            </div>
            @if (!collapseAdminMenu)
            {
                <div class="nav-item nav-item-submenu px-3">
                    <NavLink class="nav-link" href="Admin/Users">
                        <i class="fa-solid fa-users"></i> Users
                    </NavLink>
                </div>
                <div class="nav-item nav-item-submenu px-3">
                    <NavLink class="nav-link" href="Admin/StoryEditor">
                        <i class="fa-solid fa-book"></i> Story
                    </NavLink>
                </div>
                <div class="nav-item nav-item-submenu px-3">
                    <NavLink class="nav-link" href="Admin/Downloads">
                        <i class="fa-solid fa-cloud-arrow-down"></i> Downloads
                    </NavLink>
                </div>
                <div class="nav-item nav-item-submenu px-3">
                    <NavLink class="nav-link" href="Admin/LinkGroups">
                        <i class="fa-solid fa-link"></i> Links
                    </NavLink>
                </div>
                <div class="nav-item nav-item-submenu px-3">
                    <NavLink class="nav-link" href="Development">
                        <i class="fa-solid fa-code"></i> Development
                    </NavLink>
                </div>
            }
        </AuthorizeView>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="Downloads">
                <i class="fa-solid fa-cloud-arrow-down"></i> Downloads
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="Links">
                <i class="fa-solid fa-link"></i> Links
            </NavLink>
        </div>
    </nav>
</div>

