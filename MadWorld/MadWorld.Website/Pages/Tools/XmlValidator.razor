@page "/Tools/XmlValidator"

@using MadWorld.Blazor.Components.Monaco.Pages;

<PageTitle>JSON</PageTitle>

<div class="container">
    <div class="row">
        <div class="col">
            <h1>XML Validator</h1>
        </div>
    </div>
    @if (showSuccess)
    {
        <div class="row">
            <div class="alert alert-success" role="alert">
                The XML is valid
            </div>
        </div>
    }
    @if (showError)
    {
        <div class="row">
            <div class="alert alert-danger" role="alert">
                @errorMessage
            </div>
        </div>
    }
</div>

<div class="container">
    <div class="row">
        <div class="col">
            <MonacoEditor @ref="_editor" Height="400" Settings="_settings" />
        </div>
    </div>
</div>

<br />

<div class="container">
    <div class="row">
        <div class="col">
            <button type="button" class="btn btn-success" @onclick="async () => await FormatXml()">Format XML</button>
        </div>
        <div class="col">
            <button type="button" class="btn btn-success" @onclick="async () => await ValidateXml()">Validate XML</button>
        </div>
        <div class="col">
            <button type="button" class="btn btn-success" @onclick="async () => await Test()">Test</button>
        </div>
    </div>
</div>
